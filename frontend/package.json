{
	"name": "aws-ai-chat",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "simple-git-hooks",
		"amplify:sandbox": "npx ampx sandbox",
		"amplify:pipeline-deploy": "npx ampx pipeline-deploy",
		"amplify:delete": "npx ampx sandbox delete"
	},
	"simple-git-hooks": {
		"pre-commit": "git secrets --pre_commit_hook -- \"$@\" && npx lint-staged"
	},
	"lint-staged": {
		"*": "git secrets --pre_commit_hook",
		"*.{js,jsx,ts,tsx,json,css,md}": "biome check --write --files-ignore-unknown=true"
	},
	"dependencies": {
		"@aws-amplify/ui-react": "^6.13.2",
		"aws-amplify": "^6.15.9",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@aws-amplify/backend": "^1.19.0",
		"@aws-amplify/backend-cli": "^1.8.1",
		"@biomejs/biome": "^2.3.10",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"simple-git-hooks": "^2.13.1",
		"typescript": "~5.9.3",
		"vite": "^7.2.4",
		"vitest": "^4.0.16"
	}
}
